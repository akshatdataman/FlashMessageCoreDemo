@model FlashMessageCoreDemo.ViewModels.MessageVM

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Status Message Demo</h1>
    @using (Html.BeginForm("AddStatusMessage", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <div class="row input-group">
                <div class="col-lg-12">
                    <label asp-for="Message"></label>
                    <input type="text" class="form-control" asp-for="Message" />
                </div>
            </div>
        </div>
        <button class="btn btn-primary">Show Message</button>
    }
    @if (!String.IsNullOrWhiteSpace(Model.Message))
    {
        @Html.SuccessMessage(Model.Message)
        @Html.WarningMessage(Model.Message)
        @Html.ErrorMessage(Model.Message)
        @Html.InfoMessage(Model.Message)
    }
</div>
