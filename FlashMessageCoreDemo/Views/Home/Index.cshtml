@model FlashMessageCoreDemo.ViewModels.HomeIndexVM

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Flash Message Demo</h1>
    @using (Html.BeginForm("AddMessage", "Home", FormMethod.Post))
    {
        <div class="row input-group">
            <div class="col-lg-4">
                <label asp-for="Message"></label>
                <input type="text" asp-for="Message"/>
            </div>
            <div class="col-lg-4">
                <label asp-for="Type"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<FlashMessageType>()">
                </select>
            </div>
            <div class="col-lg-4">
                <button class="btn btn-primary">Show Message</button>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @TempData.FlashMessage()
            </div>
        </div>
    }
</div>
